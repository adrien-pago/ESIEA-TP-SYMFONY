{% extends 'base.html.twig' %}

{% block title %}Mes Tâches{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">
                <i class="bi bi-list-task me-2"></i>Mes Tâches
            </h1>
            <a href="{{ path('app_task_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Nouvelle Tâche
            </a>
        </div>

        {% if tasks|length > 0 %}
            <div class="row">
                {% for task in tasks %}
                    {% include 'task/_task_card.html.twig' with {'task': task} %}
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h2 class="h4 text-muted">Aucune tâche</h2>
                <p class="text-muted">Commencez par créer une nouvelle tâche</p>
                <a href="{{ path('app_task_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-2"></i>Créer ma première tâche
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %} 